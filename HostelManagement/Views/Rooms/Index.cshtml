@model IEnumerable<HostelManagement.Models.Room>
@{
    ViewBag.Title = "Index";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>
<h2>Index</h2>

<p>
    @Html.ActionLink("+", "Create",new { @class="bi bi-plus"})
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Capacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.available)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rent)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Capacity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.available)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rent)
        </td>
        <td>
            
            @Html.ActionLink("Edit", "Edit", new { id=item.Room_no}) |
            @Html.ActionLink("Details", "Details", new { id=item.Room_no }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Room_no })
        </td>
    </tr>
}

</table>
