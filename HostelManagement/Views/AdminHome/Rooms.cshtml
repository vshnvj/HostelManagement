@model IEnumerable<HostelManagement.Models.Room>

@{
    ViewBag.Title = "Rooms";
    Layout = "~/Views/Shared/Admin_layout.cshtml";
}



<h2>Room List</h2>

<p>
    @Html.ActionLink(" + ", "Create", "Rooms", new { }, new { @class = "btn btn-success" })
</p>

<hr />

<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Room_no)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Capacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.available)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rent)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Room_no)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.available)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rent)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Room_no }, new { @class = "btn btn-primary btn-sm my-2 my-sm-0" })

                @{
                    if ((item.Capacity - item.available) != 0)
                    {
                        @Html.ActionLink("Details", "Details", new { id = item.Room_no }, new { @class = "btn btn-info btn-sm my-2 my-sm-0" })
                    }
                    else
                    {
                        @Html.ActionLink("Details", "Details", new { id = item.Room_no }, new { @class = "btn btn-info btn-sm my-2 my-sm-0 disabled" })

                    }
                }

                @Html.ActionLink("Delete", "Delete", new { id = item.Room_no }, new { @class = "btn btn-danger btn-sm my-2 my-sm-0" })

            </td>

    </tr>
    }
</table>
