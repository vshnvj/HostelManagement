@{
    ViewBag.Title = "Feedback";
    Layout = "~/Views/Shared/User_Layout.cshtml";
}


<div class="navbar fixed-top  navbar-light" style="background-color: #e3f2fd">
    <ul class="nav navbar-nav">
        <li>@Html.ActionLink("Profile", "Edit", new { id = Model.Id })</li>
        @*<li> @Html.ActionLink("Submit your application", "Requests", new { id = Model.Id })</li>*@
        <li> @Html.ActionLink("Status of appliation", "SeeRequests", new { id = Model.Id }) </li>
        <li>   @Html.ActionLink("Feedback", "Feedback", "UsersHome", new { id = Model.Id })</li>

