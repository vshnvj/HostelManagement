@model int
@{
    ViewBag.Title = "AddRoom";
    Layout = "~/Views/Shared/Admin_layout.cshtml";
}

<h2>AddRoom</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Allocation</h4>
        <hr />
        <input type="hidden" name="id" value="@Model" />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Room_no, "Room_no", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Room_no", null, htmlAttributes: new { @class = "form-control",@name="Room_no" })
                @Html.ValidationMessageFor(model => model.Room_no, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
